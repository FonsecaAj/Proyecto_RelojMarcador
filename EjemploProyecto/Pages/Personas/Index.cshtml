@page
@model EjemploProyecto.Pages.Personas.IndexModel
@{
    ViewData["Title"] = "Personas";
}

<h1>Personas</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Nueva Persona</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>PersonaID</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Gender</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Personas)
        {
            <tr>
                <td>@item.PersonaID</td>
                <td>@item.Nombre</td>
                <td>@item.Tipo</td>
                <td>@item.Gender</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.PersonaID">Editar</a> |
                    <a asp-page="Delete" asp-route-id="@item.PersonaID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

