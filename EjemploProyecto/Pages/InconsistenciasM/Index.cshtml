@page
@model EjemploProyecto.Pages.Inconsistencias.IndexModel
@{
    ViewData["Title"] = "Tipos de Inconsistencia";
    Layout = "~/Pages/Shared/_Layout.cshtml"; 
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Tipos de Inconsistencia</h2>

    <div class="mb-3">
        <a asp-page="Create" class="btn btn-primary">Nuevo</a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Inconsistencias != null && Model.Inconsistencias.Any())
            {
                foreach (var item in Model.Inconsistencias)
                {
                    <tr>
                        <td>@item.ID_Inconsistencia</td>
                        <td>@item.Nombre_Inconsistencia</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@item.ID_Inconsistencia" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-page="Delete" asp-route-id="@item.ID_Inconsistencia" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No hay registros disponibles.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal General -->
<div class="modal fade" id="messageModal" tabindex="-1" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg rounded-4">
            <div class="modal-header" id="modalHeader">
                <h5 class="modal-title" id="messageModalLabel">@TempData["ModalTitle"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body text-center">
                <p>@TempData["ModalMessage"]</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var msg = '@TempData["ModalMessage"]';
        var type = '@TempData["ModalType"]';

        if (msg && msg !== "") {
            var modalHeader = document.getElementById("modalHeader");
            modalHeader.className = "modal-header";

            if (type === "success") {
                modalHeader.classList.add("bg-success", "text-white");
            } else if (type === "error") {
                modalHeader.classList.add("bg-danger", "text-white");
            } else if (type === "warning") {
                modalHeader.classList.add("bg-warning", "text-dark");
            } else {
                modalHeader.classList.add("bg-info", "text-white");
            }

            const messageModal = new bootstrap.Modal(document.getElementById("messageModal"));
            messageModal.show();
        }
    });
</script>
