@page "{id:int}"
@model EjemploProyecto.Pages.Inconsistencias.DeleteModel

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 30rem;">
        <h3 class="text-center text-danger mb-4">Eliminar Inconsistencia</h3>

        <p>¿Seguro que desea eliminar el registro <b>@Model.Inconsistencia.Nombre_Inconsistencia</b>?</p>

        <form method="post">
            <input type="hidden" asp-for="Inconsistencia.ID_Inconsistencia" />

            <div class="d-flex justify-content-between">
                <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </div>
        </form>
    </div>
</div>

