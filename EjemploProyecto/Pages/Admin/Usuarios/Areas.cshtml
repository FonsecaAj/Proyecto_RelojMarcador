@page "{id:int}"
@model EjemploProyecto.Pages.Admin.Usuarios.AreasModel
<h2>Áreas del funcionario: @Model.Usuario?.Nombre @Model.Usuario?.Apellido_1 (@Model.Usuario?.Identificacion)</h2>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<h3>Asociadas</h3>
<table class="table table-striped">
    <thead><tr><th>Área</th><th>Acción</th></tr></thead>
    <tbody>
        @foreach (var a in Model.Asociadas)
        {
            <tr>
                <td>@a.Nombre_Area</td>
                <td>
                    <form method="post" asp-page-handler="Remove" asp-route-idArea="@a.ID_Area" onsubmit="return confirm('¿Eliminar asociación?')">
                        <button class="btn btn-sm btn-danger" type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Asociar nueva área</h3>
<form method="post" asp-page-handler="Add" class="d-flex gap-2">
    <select class="form-select" style="max-width:300px" name="idArea">
        @foreach (var a in Model.Disponibles)
        {
            <option value="@a.ID_Area">@a.Nombre_Area</option>
        }
    </select>
    <button class="btn btn-primary" type="submit">Asociar</button>
</form>

<p class="mt-3"><a class="btn btn-secondary" asp-page="Index">Volver a Usuarios</a></p>
