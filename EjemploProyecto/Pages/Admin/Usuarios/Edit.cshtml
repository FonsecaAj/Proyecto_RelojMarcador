@page "{id:int}"
@model EjemploProyecto.Pages.Admin.Usuarios.EditModel
<h2>Editar usuario</h2>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Input.ID_Usuario" />

    <div class="mb-2">
        <label class="form-label">Tipo de identificación</label>
        <select class="form-select" asp-for="Input.ID_Tipo_Identificacion" asp-items="Model.TiposSelectList"></select>
    </div>

    <div class="mb-2"><label class="form-label">Identificación</label><input class="form-control" asp-for="Input.Identificacion" /></div>
    <div class="mb-2"><label class="form-label">Nombre</label><input class="form-control" asp-for="Input.Nombre" /></div>
    <div class="mb-2"><label class="form-label">Primer apellido</label><input class="form-control" asp-for="Input.Apellido_1" /></div>
    <div class="mb-2"><label class="form-label">Segundo apellido</label><input class="form-control" asp-for="Input.Apellido_2" /></div>
    <div class="mb-2"><label class="form-label">Correo</label><input class="form-control" asp-for="Input.Correo" /></div>
    <div class="mb-2"><label class="form-label">Teléfono</label><input class="form-control" asp-for="Input.Telefono" /></div>

    <div class="mb-2">
        <label class="form-label">Rol</label>
        <select class="form-select" asp-for="Input.ID_Rol_Usuario" asp-items="Model.RolesSelectList"></select>
    </div>

    <div class="mb-2"><label class="form-label">Usuario</label><input class="form-control" asp-for="Input.Nom_Usuario" /></div>
    <div class="mb-2"><label class="form-label">Nueva contraseña (opcional)</label><input class="form-control" asp-for="Input.Password" type="password" /></div>

    <div class="mb-3">
        <label class="form-label">Estado</label>
        <select class="form-select" asp-for="Input.Estado">
            <option>Activo</option>
            <option>Inactivo</option>
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Guardar</button>
    <a class="btn btn-secondary" asp-page="Index">Cancelar</a>
</form>
